<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".actividades.Recuperar_cuenta"
    android:background="@drawable/fondo"
    android:id="@+id/recuperar_cuenta_layout">

    <ImageView
        android:id="@+id/logo_recuperar"
        android:layout_width="250dp"
        android:layout_height="100dp"
        android:layout_marginTop="40dp"
        android:src="@drawable/ic_launcher_foreground"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">
    </ImageView>

    <LinearLayout
        android:id="@+id/recuperar_cuenta"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginTop="30dp"
        android:layout_marginLeft="5dp"
        android:layout_marginRight="5dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/logo_recuperar"
        android:background="@color/white">

        <TextView
            android:id="@+id/titulo_recuperar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Recuperar cuenta"
            android:textSize="20dp"
            android:textStyle="bold"
            android:gravity="left"
            android:layout_marginTop="30dp"
            android:layout_marginLeft="30dp"
            android:layout_marginRight="30dp"
            android:textColor="#2547B1">
        </TextView>

        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/layout_correo_eletrónico_recup"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="30dp"
            android:layout_marginRight="30dp"
            app:endIconMode="clear_text">
            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/valor_correo_eletrónico_recup"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:hint="Correo electrónico">
            </com.google.android.material.textfield.TextInputEditText>

        </com.google.android.material.textfield.TextInputLayout>

        <Button
            android:id="@+id/boton_recuperar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="30dp"
            android:layout_gravity="center"
            android:text="Mandar datos"
            android:backgroundTint="#2547B1">
        </Button>

        <Button
            android:id="@+id/boton_volver_inicio_sesion_recup"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="20dp"
            android:layout_gravity="center"
            android:text="Volver al inicio"
            android:backgroundTint="#2547B1">
        </Button>

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>